<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cardview_dark_background"
    tools:context=".FeedPage"
    android:id="@+id/parentLayout">

    <TextView
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Feed"
        android:textAlignment="center"
        android:textSize="40dp"
        android:fontFamily="sans-serif-light"
        android:textColor="@color/purple_200"
        android:layout_marginTop="50dp" />

    <Button
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/Profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Profile" />

    <Button
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/FitMaker"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="FitMaker" />

    <Button
        app:layout_constraintLeft_toRightOf="@id/FitMaker"
        app:layout_constraintRight_toLeftOf="@id/Feed"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/Vote"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="Vote" />

    <Button
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/Feed"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:text="Feed" />

    <androidx.recyclerview.widget.RecyclerView
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/FitMaker"
        android:layout_width="409dp"
        android:layout_height="628dp"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="49dp" />

</androidx.constraintlayout.widget.ConstraintLayout>